/* pages/info/info.wxss */
page{
  background: #f5f5f5;
}

.idCard{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 690rpx;
  margin: 30rpx auto 0;
}
.card{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 640rpx;
  padding: 30rpx 0;
  margin-bottom: 40rpx;
  border-radius:20rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 6rpx 0px rgba(153,153,153,0.06);

}
.card image{
  width: 600rpx;
  height: 382rpx;
}
.card text{
  font-size:30rpx;
  line-height:30rpx;
  color:rgba(72,149,247,1);
  margin-top: 20rpx;
}